<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kkk"
    tools:context="com.example.shahi.kamonstore.serialNo.serialPage"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <TextView
                    android:id="@+id/text_tit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/invoice_details"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_in1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/invoice_no"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/in_det1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_in2"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/invoicedate"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/in_det2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_in3"
                    android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="@string/customer_name"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                android:textSize="18sp"/>
                <TextView
                    android:id="@+id/in_det3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_in4"
                    android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/pay_method"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                android:textSize="18sp"/>
                <TextView
                    android:id="@+id/in_det4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_in5"
                    android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/discount"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                android:textSize="18sp"/>
                <TextView
                    android:id="@+id/in_det5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_in6"
                    android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/residual"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                android:textSize="18sp"/>
                <TextView
                    android:id="@+id/in_det6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_in7"
                    android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/payments"
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                android:textSize="18sp"/>
                <TextView
                    android:id="@+id/in_det7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_in8"
                    android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/invoicenet"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                android:textSize="18sp" />
                <TextView
                    android:id="@+id/in_det8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_in9"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/type"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp" />
                <TextView
                android:id="@+id/in_det9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"/>
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_del1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/delivered"
                        android:textColor="#000000"
                        android:layout_marginBottom="5dp"
                        android:textSize="18sp" />
                    <CheckBox
                        android:id="@+id/check_de1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delivered"
                        android:textSize="15sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="262dp">
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:id="@+id/recycler_item"
                        android:clickable="false"
                        android:layout_margin="10dp"
                        card_view:contentPadding="8dp"
                        card_view:cardElevation="6dp"
                        card_view:cardCornerRadius="4dp">
                        <TextView
                            android:gravity="left"
                            android:id="@+id/list_item_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:minLines="9"
                            tools:ignore="RtlHardcoded" />


                        <CheckBox
                            android:id="@+id/check_de2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivered"
                            android:textSize="15sp"
                            android:layout_marginStart="80dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_gravity="bottom"
                            android:layout_alignBottom="@+id/checkBox"
                            android:layout_alignTop="@+id/checkBox" />

                    </android.support.v7.widget.CardView>

                    <Button
                        android:id="@+id/btn_Med"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="@string/done"
                        android:textAllCaps="false"
                        android:background="@drawable/circle1"
                        android:textColor="#000000"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle1"
                        android:layout_marginLeft="14dp"
                        android:layout_above="@+id/btn_Med"
                        android:layout_alignLeft="@+id/recycler_item"
                        android:layout_alignStart="@+id/recycler_item"
                        android:layout_marginStart="240dp"
                        android:layout_marginBottom="8dp" />
                    <TextView
                        android:id="@+id/text_store"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:text="@string/please_choose_the_restore"
                        android:textColor="#000000"
                        android:layout_marginBottom="7dp"
                        android:textSize="18sp"
                        android:layout_alignBottom="@+id/spinner"
                        android:layout_alignLeft="@+id/recycler_item"
                        android:layout_alignStart="@+id/recycler_item" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>